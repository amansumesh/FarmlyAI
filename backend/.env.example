NODE_ENV=development
PORT=4000

# MongoDB
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/farmly_ai?retryWrites=true&w=majority

# Redis
REDIS_URL=redis://default:password@redis-host:port

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Twilio (OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Google Cloud (Speech-to-Text, Text-to-Speech)
# Create a project at console.cloud.google.com
# Enable Cloud Speech-to-Text API and Cloud Text-to-Speech API
# Create a service account with Speech Admin and Text-to-Speech Admin roles
# Download the JSON key file and provide the absolute path here
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_CREDENTIALS=path/to/service-account-key.json

# OpenWeatherMap
OPENWEATHER_API_KEY=your-openweather-api-key

# Gemini 2.5 Flash (for market prices AI generation)
# Get from: https://aistudio.google.com/
GEMINI_API_KEY=your-gemini-api-key

# Agmarknet (Market Prices)
# Get API key from https://data.gov.in
AGMARKNET_API_KEY=your-agmarknet-api-key

# ML Service
ML_SERVICE_URL=http://localhost:8000

# Vercel Blob Storage
BLOB_READ_WRITE_TOKEN=your-vercel-blob-token

# Demo Mode
# Set to 'true' to enable demo mode with pre-configured test accounts
# Demo accounts will use a fixed OTP (123456) for easy testing
DEMO_MODE=false
